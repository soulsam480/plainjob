{
  "$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "files": {
    "includes": [
      "**",
      "!**/.git/**",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/.turbo/**",
      "!**/tsup.config.bundled*",
      "!**/coverage/**"
    ]
  },
  "linter": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  }
}
